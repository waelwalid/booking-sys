{
    "root": true,
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/strict-boolean-expressions": [
            2,
            {
                "allowString": false,
                "allowNumber": false
            }
        ],
        "import/prefer-default-export": "off",
        "no-console": "off",
        "class-methods-use-this": "off"
    },
    "ignorePatterns": [
        "src/**/*.test.ts"
    ]
}